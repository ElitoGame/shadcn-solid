    "@kobalte/core": "^0.13.3",
    "@mdx-js/mdx": "^2.3.0",
    "@solid-primitives/storage": "^3.5.0",
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.13.6",
    "@solidjs/start": "^1.0.2",
    "@tanstack/solid-table": "^8.15.3",
    "@vinxi/plugin-mdx": "^3.7.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk-solid": "^1.0.1",
    "embla-carousel-autoplay": "8.0.0",
    "embla-carousel-solid": "8.1.5",
    "solid-js": "^1.8.17",
    "solid-mdx": "^0.0.7",
    "solid-sonner": "^0.2.6",
    "solid-wrap-balancer": "^0.0.5",
    "tailwind-merge": "^2.2.2",
    "vinxi": "^0.3.12",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/lodash.template": "^4.5.3",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-solid": "^0.13.2",
    "estree-util-value-to-estree": "^3.0.1",
    "lodash.template": "^4.5.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "rehype-pretty-code": "^0.6.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^3.0.0",
    "rimraf": "^5.0.5",
    "shiki": "^0.12.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.7.1",
    "unist-builder": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "yaml": "^2.3.4",
    "@repo/unocss": "workspace:*"
  },
  "private": true,
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "pnpm build:registry",
      "pnpm run format",
      "biome check --apply-unsafe --staged --no-errors-on-unmatched",
      "pnpm run lint --fix"
    ]
  }
}

---
import { codeToHtml } from "shiki";
import blackout from "../../public/theme/dark.json?raw";

type Props = {
    code: string;
};

const { code } = Astro.props;

const codeHTML = codeToHtml(code.trim(), {
    lang: "tsx",
    theme: JSON.parse(String(blackout)),
});
---

<Fragment set:html={codeHTML} />
